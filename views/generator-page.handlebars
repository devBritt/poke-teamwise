    <section id="generator-center" class="cell large-6">
        <section id="generator-controls" class="">
            <form id="generator-form">
                <div class="grid-container">
                    <div class="grid-x grid-padding-x">
                        <section id="game-select-container" class="cell small-3">
                            <label for="game-select">Game
                                <select id="game-select" name="game-select" placeholder="Required" required>
                                    <option value="">Pick a Game</option>
                                    {{#each games as |game|}}
                                    <option value="{{game.dexId}}">{{game.name}}</option>
                                    {{/each}}
                                </select>
                            </label>
                        </section>
                        <section id="type-select-container" class="cell small-3">
                            <label for="type-select">Types
                                <select name="type-select" id="type-select">
                                    <option value="">Optional</option>
                                    {{#each types as |type|}}
                                    <option value="{{type.typeId}}">{{type.name}}</option>
                                    {{/each}}
                                </select>
                            </label>
                        </section>
                        <section id="move-select-container" class="cell small-3">
                            <label for="move-select">Moves
                                <select name="move-select" id="move-select">
                                    <option value="">Optional</option>
                                    {{#each moves as |move|}}
                                    <option value="{{move.moveId}}">{{move.name}}</option>
                                    {{/each}}
                                </select>
                            </label>
                        </section>
                        <button type="submit" id="generate-btn" class="cell small-3">Go!</button>
                    </div>
                </div>
            </form>
        </section>
        <section id="pokemon-details" class="">

        </section>
    </section>
