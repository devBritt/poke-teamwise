<section id="teams-page" class="grid-x">
    <aside id="members-window" class="cell medium-3">
        <div class="grid-container fluid">
            <form class="grid-x" id="team-form">
                <section class="cell auto">
                    <label id="team-title"> Team Name
                        <select id="team-selector">
                            <option value="">Pick a Team</option>
                            {{#each teams as |team|}}
                            <option value="{{team.id}}">{{team.team_name}}</option>
                            {{/each}}
                        </select>
                    </label>
                    <button type="click" id="delete-btn" class="cell auto small-2 button">Go</button>
                    <button type="click" id="delete-btn" class="cell auto small-2 button">Delete Team</button>
                </section>
            </form>
        </div>
        <aside id="members-window">
            {{#each membersDetails as |member|}}
            <article id="slot-{{member.memberNum}}" class="roster-slot grid-x">
                <section class="member-tile cell auto">
                    {{> member-tile member=member}}
                </section>
            </article>
            {{/each}}
        </aside>
    </aside>
    <section class="cell auto" id="member-controls">
        <section class="grid-container fluid" id="dashboard-center-control">
            <form id="member-form" class="grid-x">
                <label for="member-select" id="member-select">
                    <select name="member-select" id="pokemon-selector">
                        <option value="">Team Members</option>
                        <option value="{{member.id}}">{{member.pokemon_name}}</option>
                    </select>
                </label>
                    <button type="submit" id="details-btn" class="cell small-2 button">Get Pok√©mon Details!</button>
            </form>
        </section>
        <section id="pokemon-details" class="grid-container fluid">
            <div class="grid-x">
                <section id="pokemon-details-container" class="cell medium-8">
                    {{> pokemon-card}}
                </section>
                <section id="evolutions-container" class="cell medium-4">
                    {{> evolution-chain}}
                </section>
            </div>
        </section>
    </section>
</section>

<script src="/javascript/dashboard.js"></script>
<script src="/javascript/generate-card.js"></script>