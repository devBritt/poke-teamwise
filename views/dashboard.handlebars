{{#if hasTeams}}
<section id="teams-page" class="grid-x">
    <aside id="members-window" class="cell medium-3">
        <section class="grid-x">
            <form class="grid-x" id="team-form">
                <label id="team-title"> Team Name
                    <select id="team-selector" onchange="switchTeam()">
                        <option value="">Pick a Team</option>
                        {{#each teams as |team|}}
                        <option value="{{team.id}}">{{team.team_name}}</option>
                        {{/each}}
                    </select>
                </label>
            </form>
            <section class="cell grid-x grid-padding-x">
                <button type="button" id="update-btn" class="cell auto button btn"><span class="material-symbols-outlined">edit</span></button>
                <button type="button" id="save-team-name-btn" class="cell auto button btn"><span class="material-symbols-outlined">save</span></button>
                <button type="button" id="delete-btn" class="cell auto button btn"><span class="material-symbols-outlined">delete</span></button>
            </section>
        </section>
        {{#each membersDetails as |member|}}
        <article id="slot-{{member.memberNum}}" class="roster-slot grid-x">
            <section class="member-tile cell auto">
                {{> member-tile member=member}}
            </section>
        </article>
        {{/each}}
    </aside>
    <section class="cell auto">
        <section id="pokemon-details" class="grid-container fluid">
            <div class="grid-x">
                <section id="pokemon-details-container" class="cell medium-10">
                    {{> pokemon-card}}
                </section>
                <section id="evolutions-container" class="cell medium-2">
                    {{> evolution-chain}}
                </section>
            </div>
        </section>
    </section>
</section>

<script src="/javascript/delete-team.js"></script>
<script src="/javascript/update-team.js"></script>
{{else}}
<section id="no-teams-cta">
        <section class="vertical-align-middle">
            <h2 class="no-teams-title">
                Woah! Looks like you're Mew to this!
            </h2>
            <p class="no-teams-subtitle">Head to the generator to create and save some teams, first.</p>
            <section class="generator-btn-container"><a href="/generator" id="generator-btn" class="button btn">Let's Go!</a></section>
        </section>
    </section>
{{/if}}

<script src="/javascript/dashboard.js"></script>
